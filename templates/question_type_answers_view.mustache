<!--Header for all timing Question Answers-->
<div id="answers-{{id}}">
    <div class="question">
        <form class="pull-right">
            <div class="form-group">
                <select class="form-control" onchange="location = this.value;">
                    {{#dropdown_options}}
                        {{{.}}}
                    {{/dropdown_options}}
                </select>
            </div>
        </form>
    </div>

    <!--Click Question Answers-->
    {{#timing_question}}
        <div class="answers">
            <table class="generaltable table-sm table-bordered">
                <thead>
                <tr>
                    <th scope="col" colspan="2">{{id_label}}<span class="answers-header-details">{{id}}</span></th>
                    <th scope="col" colspan="1">{{type_label}}<span class="answers-header-details">{{question_type}}</span></th>
                    <th scope="col" colspan="2">{{title_label}}<span class="answers-header-details">{{{label}}}</span></th>
                </tr>
                <tr>
                    <th scope="col" colspan="5">{{question_label}}<span class="answers-header-details">{{{question}}}</span></th>
                </tr>
                <tr>
                    <th scope="col">{{name}}</th>
                    <th scope="col">{{user_id}}</th>
                    <th scope="col">{{first_timing_answer}}</th>
                    <th scope="col">{{click_retries}}</th>
                    <th scope="col" class="odd">{{last_timing_answer}}</th>
                </tr>
                </thead>
                <tbody>
                {{#answers}}
                    {{{.}}}
                {{/answers}}
                </tbody>
            </table>
        </div>
    {{/timing_question}}

    <!--Items per Pager-->
    <div class="question-answers-footer">
        <form class="form-inline">
            <div class="form-group">
                <label for="items-per-page" class="">{{elements}}</label>

                <select id="items-per-page" class="form-control"
                        onchange="location = this.value;">
                    {{#pager_options}}
                        {{{.}}}
                    {{/pager_options}}
                </select>
            </div>
        </form>
        <div class="question-download">
            {{{download_options}}}
        </div>
    </div>

</div>
